{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports" : true,
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["*.ts", "src/convert/**/*.ts", "src/model/objModel.ts", "src/customLayer.ts", "src/customSource.ts", "src/interface_class.ts"],
  "exclude": ["node_modules", "dist"]
}
